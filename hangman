import random

# List of words
words = ["apple", "banana", "orange", "grape", "mango"]

# Choose a random word
secret_word = random.choice(words)

# Create a list to store guessed letters
guessed = ["_"] * len(secret_word)

# Number of wrong guesses allowed
lives = 6

print("Welcome to Hangman!")
print("Guess the word, one letter at a time.")

while lives > 0 and "_" in guessed:
    print("\nWord:", " ".join(guessed))
    print("Lives left:", lives)
    
    guess = input("Enter a letter: ").lower()
    
    if guess in secret_word:
        # Reveal the letter in the guessed list
        for i in range(len(secret_word)):
            if secret_word[i] == guess:
                guessed[i] = guess
        print("Good guess!")
    else:
        lives -= 1
        print("Wrong guess!")
    
# Game result
if "_" not in guessed:
    print("\nCongratulations! You guessed the word:", secret_word)
else:
    print("\nYou ran out of lives! The word was:", secret_word)
